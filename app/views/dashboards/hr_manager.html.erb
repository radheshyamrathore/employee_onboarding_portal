<body class = "page-bg">
<h1>HR Manager Dashboard</h1>

<h2>Employees</h2>
<h3> <%= link_to 'Add New Employee', new_employee_path %> </h3>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Department</th>
      <th>Role</th>
      <th>Onboarding Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.name, employee_dashboard_path(employee_id: employee.id) %></td>
        <td><%= employee.email %></td>
        <td><%= employee.department %></td>
        <td><%= employee.role %></td>
        <td><%= employee.onboarding_status %></td>
        <td>
          <%= link_to 'Employee Details', employee_path(employee) %> ||
          <%= link_to 'Edit Employee Details', edit_employee_path(employee) %>
          <%= form_with(model: employee, local: true, method: :delete, class: 'inline-form') do |form| %>
            <%= form.submit 'Delete Employee', data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</body>
